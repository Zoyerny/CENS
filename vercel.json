{
  "version": 2,
  "builds": [
    {
      "src": "front-end/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "back-end/nest-cli.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "back-end/$1"
    },
    {
      "src": "/(.*)",
      "dest": "front-end/$1"
    }
  ]
}